<%= div_for comment do %>
  <span class="dateandoptions">
    Posted <%=comment.created_at%> ago<br />
    <%#=time_ago_in_words(comment.created_at)%>
    <%#= link_to 'Delete', post_comment(comment), :method => :delete, :class => "delete", :remote => true  %>
  </span>
	<p><b><%= comment.username %></b> wrote:</p>
  <%= content_tag(:p, comment.comment, :class => "comment-body") %>
        <br/>
<% end %>
