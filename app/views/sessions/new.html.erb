<div class="header_title">
    	<div class="container"><h2>Sign In</h2></div>
    </div>

<div id="sign_in" class="top_search_pannel bot_mag_main_20">
<div class="about_section">
 <div class="sign_in_fb">
   <%= form_tag ({:controller=> "welcome", :action=> "login"}) do %>
            
            <div id="signin_button">
                <%= image_submit_tag  ("/assets/fb_login.png") %>
            </div>
        <% end %>
 </div>
 
 <div class="or"><span>OR</span></div>

 <div class="sign_in_fill">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="field"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div>

  <div class="field"><%= f.label :password %>
  <%= f.password_field :password %>
 <%# <span class="">&nbsp;&nbsp;&nbsp;<a href="/users/password/new">Forgot your password?</a></span> %>
		  </div>
				
	<% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="field">
	<label>&nbsp;</label>
	<%= f.submit "Sign in" %>
  </div>
<% end %>
	</div>
<%= render "devise/shared/links" %>
</div>
