
<div class="main">
        <div class="pageHeader">
            <h2 class="title">Ready to resolve Vox !!</h2>
        </div><!-- .banner -->
        <div class="content">
			<%= form_for @post ,:html=>{:class => "form"} do |f| %>
				<%= f.hidden_field :status ,:value=>"Resolved"%>
            <ul class="inputs">
				<li><label><b>How was it resolved ?</b></label></li>
              <li class="item">
				   <%= f.text_area :resolve_vox,:class=>"inp_area", :placeholder=>"Please add a brief description about your experience with the company and umvox." %>
				</li>	
				<%= f.submit "Resolve Vox" , class: "buttonBlue"%>
			</ul>
				<% end %>
        </div><!-- .content -->
    </div><!-- .main --> 