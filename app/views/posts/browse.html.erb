<div class="header_title">
    	<div class="container"><h2>Browse Vox</h2></div>
    </div>
	


<div class="top_search_pannel">
  
  <div class="search_pannel_M" style="padding-top:0;">
        
        	<span class="title_green">
            Search Your Vow Here !
            </span>
            <div class="search_form">
  
  <%= form_tag("/posts/browse", :method=>:get) do %>
    <%= hidden_field_tag :type,"location" %>
       
		<%= text_field_tag :search, params[:search] %>
        <%= submit_tag "SEARCH", :name => nil %>
		
    
  <% end %>
 </div>
 </div> 
  <div class="clr"></div>
 </div> 
<div class="left_section left_section_new">      
     <%  if @returnsearch && @locationGroupByName.size > 0%> 
      <%= render "renderbrowsepostbysearch", :locationGroupByName=>@locationGroupByName %>            
      <% else %>
        <br><p> No Results Found</p>
     <% end %>     
  <%  if @locationGroupByName.size == 0%>       
     <p><b>Can't find , check out the directory below.</b></p>     <br><br>  
     <ul class="browse_categories">     
     <% Category.all.each do |category| -%>
       <li>
         <div><%= link_to category.name,"/posts/browse?type=category&search="+category.name %></div>
           <p><%=   category.description %></p>
       </li>
     <% end %>
     </ul>  
   <% end %>  
</div>
</div>

