<p id="notice"><%= notice %></p>

<p>
<table border ="1">
  <tr>
    <td rowspan="3">
      <p>
        
        <% unless @post.locations.nil? %>
          <% @post.locations.each do | location| %>
          <%= location.name %>, <%= location.address %><br/>
          <%= location.city %> <%= location.zipcode %>
          <% end %>
          <br/>
         <% end %>
          <b> <%=@post.posttype %>: <%= @post.question %></b> <br/>
           Filed At <%=@post.created_at.strftime("%d %b %y")  %>  &nbsp;&nbsp;&nbsp;   Last Updated <%= @post.updated_at.strftime("%d %b %y") %></br>
         </br>
         <%= @post.description %></br></br></br>
         <% @post.assets.each  do |asset_fields| %>
                  <%= link_to image_tag(asset_fields.image.url(:thumb)),asset_fields.image.url(:original) %>
        <% end %>

         Posted By <%= User.find(@post.user_id).firstname   %>
      </p>
    </td>
    <td>
        Complaint Status:<%= @post.status %>
        The email was sent on xxx-xxx-xxxx  
    </td>
  <tr>
    <td>
      Share this on 
       Facebook &nbsp;&nbsp;twitter
    </td>
  </tr>  
  </tr>
  <tr>
    <td>
      Service Info
      Company <% @post.company %>
      Category: 
      <% if !@post.category.nil? -%>
        <%  Category.all.each do |category|  -%>
          <%if  @post.category.include?(category.id.to_s) %>
            <%= category.name %>
          <% end -%>
        <% end -%>
      <% end -%>
    </td>
  </tr>
</table>


<br/><br/>
<% unless session[:user] == nil %>
 <% session[:user].firstname %>

    <table border ="1"><tr><td>
    <%= form_for [@post,Comment.new] , :remote=> true do |f| %>
          <%= f.text_field :comment %>
          <p><%= f.check_box  :is_backer %>
             <%= label :is_backer, "Backer" %>
              <%= f.submit 'Add Comment' %>
            </p>
     </td></tr></table>   
    <% end %>
 <% else %>         
  
    <%= form_for [@post,Comment.new] , :remote=> true do |f| %>
    <table>
        <tr><td>
             Name:
          </td><td>
             <%= f.text_field :name %>
          </td>
        </tr>
        <tr><td>
            Email:
          </td><td>
             <%= f.text_field :email %>
          </td>
        </tr>
        <tr><td>
            Comment:
          </td>
          <td>
              <%= f.text_field :comment %>
          </td>
        </tr>
        <tr>
          <td>
                 <%= label :is_backer, "Backer" %>
          </td>
          <td><%= f.check_box  :is_backer %>
          </td>
        </tr>
        <tr><td>
                  <%= f.submit 'Add Comment' %>
          </td>
       </tr>         
      </table> 
     <% end %>       
     
   
<% end %>          

<%= render "/shared/tweet_button" %>
