<h3>User Details</h3>
<%= form_for(@user) do |f| %>
  <%#= f.error_messages %>

<table>
  <tr>
    <td><%= f.label :username %></td>
    <td><%= f.text_field :username %></td>
</tr>
<tr>
  <td><%= f.label :firstname %></td>
  <td><%= f.text_field :firstname %></td>
</tr>
<tr>
  <td><%= f.label :lastname %></td>
  <td><%= f.text_field :lastname %></td>
</tr>
<tr>
  <td><%= f.label :emaild %></td>  
  <td><%= f.text_field :emaild %></td>
<tr>  
  <td><%= f.label :city %></td>
  <td><%= f.text_field :city %></td>
</tr>
<tr>
  <td><%= f.label :country %></td>
  <td><%= f.text_field :country %></td>
</tr>
<tr>
  <td><%= f.label :state %></td>
  <td> <%= f.text_field :state %></td>
</tr>
<tr>
  <td><%= f.label :dob %></td>
  <td> <%= f.date_select :dob %></td>
</tr>
  <%= f.hidden_field :fbid  %>
 </table> 
  <%= f.submit %>
<% end %>
<table>
  <tr>
  <td>Open Tickets</td>
  <td><%= @totalopen  %></td>
</tr>
<tr>
  <td>Close Tickets</td>
  <td><%= @totalclosed %></td>
  
</table>
  
  
 