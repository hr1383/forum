<h1>Listing assets</h1>

<table>
  <tr>
    <th>Post</th>
    <th>Filename</th>
    <th>Contenttype</th>
    <th>Size</th>
    <th>Width</th>
    <th>Height</th>
    <th>Thumbnail</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
    <td><%= asset.post %></td>
    <td><%= asset.filename %></td>
    <td><%= asset.contenttype %></td>
    <td><%= asset.size %></td>
    <td><%= asset.width %></td>
    <td><%= asset.height %></td>
    <td><%= asset.thumbnail %></td>
    <td><%= asset.created_at %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

