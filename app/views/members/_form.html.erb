<div class="main">
        <div class="pageHeader">
            <h2 class="title">Member Details </h2>
        </div><!-- .banner -->
        <div class="content">
					<%= form_for @user,:url => { :action => "updateprofile" },:html =>{:class=>"form"} do |f| %>
					   <% if @user.errors.any? %>
					    <div id="error_explanation">
					      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

					      <ul>
					      <% @user.errors.full_messages.each do |msg| %>
					        <li><%= msg %></li>
					      <% end %>
					      </ul>
					    </div>
					  <% end %>
						<ul class="inputs">
							<li class="item">
								<%= f.label :username %>
								<%= f.text_field :username %>
								<div id="error_username" style="display:none">Username is already taken.</div>
							</li>	
							<li class="item">
								<%= f.label :firstname %>
								<%= f.text_field :firstname %>
							</li>
							<li class="item">
								<%= f.label :lastname %>
								<%= f.text_field :lastname %>
							</li>
							<li class="item">
								<%= f.label :email %>	
								<%= f.text_field :email %>
							</li>
							<li class="item">
								<%= f.label :city %>	
								<%= f.text_field :country %>
							</li>
							<!-- <li class="item">
								<%= f.check_box :subscribe  %>
								<label>Get Notified about your Vox and latest updates.</label>
							</li> -->
						    <%= f.hidden_field :fbid  %>
						    <%=  f.hidden_field :id %>
							 <%= f.submit "Update Info", class: "buttonBlue" %>
					<% end %>
	 

        </div><!-- .content -->
    </div><!-- .main -->


  
 