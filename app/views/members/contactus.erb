<%= form_tag ("support") do  %>

<div class="field">
    <%= label_tag 'name'  %><br />
    <%= text_field_tag 'name' %>
  </div>
  <div class="field">
    <%= label_tag 'email' %><br />
    <%= text_field_tag 'email' %>
  </div>
<div class="field">
    <%= label_tag 'subject' %><br />
    <%= text_field_tag 'subject' %>
  </div>
<div class="field">
    <%= label_tag 'message' %><br />
    <%= text_area_tag  'message', nil, :rows => 20, :cols =>40 %>
  </div>

<div>
  <%= submit_tag 'Send' %>
</div>
<% end %>